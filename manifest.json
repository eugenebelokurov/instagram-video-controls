{
  "manifest_version": 3,
  "name": "Instagram Video Controls",
  "version": "0.1",
  "description": "A test extension that logs when Instagram loads.",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
   "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["thumbnail-image.jpg"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "favicon.ico",
    "192": "icon192.png"
  }
}